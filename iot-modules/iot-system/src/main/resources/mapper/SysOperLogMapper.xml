<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.iot.system.mapper.SysOperLogMapper">
    <select id="selectSysOperLogByVo"
            resultType="com.atguigu.iot.system.pojo.SysOperLog"
            parameterType="com.atguigu.iot.system.vo.SysOperLogVo">
        SELECT
        *
        FROM
            sys_oper_log
        <where>
            <if test="vo.title != null and vo.title != ''">
                AND title LIKE CONCAT( '%', #{vo.title}, '%' )
            </if>
            <if test="vo.operName != null and vo.operName != ''">
                AND oper_name LIKE CONCAT( '%', #{vo.operName}, '%' )
            </if>
            <if test="vo.beginTime != null and vo.beginTime != ''">
                AND DATE_FORMAT( create_time, '%y%m%d' ) &gt;= DATE_FORMAT(#{vo.beginTime}, '%y%m%d' )
            </if>
            <if test="vo.endTime != null and vo.endTime != ''">
                AND DATE_FORMAT( create_time, '%y%m%d' ) &lt;= DATE_FORMAT(#{vo.endTime}, '%y%m%d' )
            </if>
            AND del_flag = 0
        </where>
        ORDER BY
        create_time DESC
    </select>
</mapper>